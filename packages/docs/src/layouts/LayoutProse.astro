---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="font-sans dark:bg-[#13151a] bg-light prose prose-dark dark:prose-light p-2 h-full max-w-full sm:text-base text-sm sm:max-w-[65ch] mx-auto max-w-[80ch]"
  >
    <slot />
  </body>
</html>
